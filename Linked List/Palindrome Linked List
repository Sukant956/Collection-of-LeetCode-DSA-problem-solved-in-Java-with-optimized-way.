// Problem: Palindrome Linked List
// Platform: LeetCode and Striver
// Approach: Split, Reverse, and Compare
// Time Complexity: O(n)
// Space Complexity: O(1)

// Code 

class Solution {
    public boolean isPalindrome(ListNode head) {
        ListNode slow = head;
        ListNode fast = head;

        // This will give me the middle of linked list slow will be at the middle 

        while(fast != null && fast.next != null)
        {
            slow = slow.next;
            fast = fast.next.next;
        }

        // Reverse the rest of the linked list

        ListNode prev = null;
        while(slow != null)
        {
            ListNode temp = slow.next;
            slow.next = prev;
            prev = slow;
            slow = temp;
        }

        // now the prev will be at 1 and we will start from the head and prev and compare

        while (prev != null)
        {
            if(head.val != prev.val) return false;
            head = head.next;
            prev = prev.next;
        }
        return true;
    }
}
