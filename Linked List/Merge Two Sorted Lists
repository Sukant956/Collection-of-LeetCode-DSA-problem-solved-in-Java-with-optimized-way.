// Problem: Merge Two Sorted Lists
// Platform: Leetcode and Striver
// Approach: Linked list
// Time complexity: O(n+m)
// Space Complexity: O(1)

// Code

class Solution {
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {

        // Base case 
        ListNode head = null;
        ListNode ptr = null;

        if(list1 == null) return list2;
        if(list2 == null) return list1;

        // for getting the first smallest element from the list
        while(list1 != null && list2 != null){
            if(head == null){
                if(list1.val < list2.val){
                    ptr = head = list1;
                    list1 = list1.next;
                }
                else {
                    ptr = head = list2;
                    list2 = list2.next;
                }
                continue;
            }

            //let element in list2 is greater
            if(list1.val < list2.val){
                ptr.next = list1;
                ptr = list1;
                list1 = list1.next;
            }
            else{
                ptr.next = list2;
                ptr = list2;
                list2 =list2.next;
            }
          
        }
          // If any one of the list finish
            if(list1 != null){
                ptr.next = list1;
            }
            else{
                ptr.next = list2;
            }
        return head;
    }
}
