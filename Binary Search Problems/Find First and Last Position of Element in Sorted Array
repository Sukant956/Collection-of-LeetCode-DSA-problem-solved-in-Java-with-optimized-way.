// Problem: Find First and Last Position of Element in Sorted Array
// Platform: LeetCode and Striver
// Approach: Binary Search
// Time Complexity: O(n)
// Space Complexity: O(1)

// Code 

class Solution {
    public int[] searchRange(int[] nums, int target) {

        int ans[] = new int[2]; // Creating the array of size 2

        ans[0] = ans[1] = -1;  // handeling the test case that if the target is not find return -1

        for(int i = 0;i < nums.length;i++){
            if(nums[i] == target){
                if(ans[0] == -1){
                    ans[0] = i;
                }
                ans[1] = i;
            }
        }
        return ans;
    }
}
