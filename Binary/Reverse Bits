// Problem: Reverse Bits
// Platform: Leetcode and Striver
// Approach: AND operation and shift
// Time complexity: O(1)
// Space complexity:0(1)

// Code

class Solution {
    public int reverseBits(int n) {
        int res = 0;
        for(int shift = 31;shift >= 0;shift--){
            int bit = n & 1;
            res = res + (bit << shift);
            n = n >> 1;
        }
        return res;
    }
}
