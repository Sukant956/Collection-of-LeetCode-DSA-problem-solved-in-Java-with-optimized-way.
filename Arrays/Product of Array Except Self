// Problems: Product of Array Except Self
// Platform: Leetcode and Striver
// Approach: Prefix and Suffix
// Time Complexity: O(n)
// Space Complexity: O(n)

// Code 

class Solution {
    public int[] productExceptSelf(int[] nums) {
        int left[] = new int[nums.length];
        int right[] = new int[nums.length];

        left[0] = 1;
// Filling the left array
        for(int i = 1;i<nums.length;i++){
            left[i] = left[i-1] * nums[i - 1];
        }

        right[nums.length -1] = 1;
        // Filling the right array
        for(int i = nums.length -2;i > -1;i--){
            right[i] = right[i + 1] * nums[i + 1];
        }

        // creating new array to store the answer
        int ans[] = new int[nums.length];

        // Multiplying both the array

        for(int i = 0;i<nums.length;i++){
            ans[i] = left[i] * right[i];
        }
        return ans;
    }
}
