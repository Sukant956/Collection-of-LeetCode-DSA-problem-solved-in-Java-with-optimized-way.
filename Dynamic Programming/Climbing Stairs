// Problem: Climbing Stairs
// Platform: LeetCode and Striver
// Approach: Dynamic programming
// Time Complexity: O(n)
// Space Complexity:O(1)

// Code

class Solution {
    public int climbStairs(int n) {

// If the value of ladder(n) is less than or equal to 3 it will take the same steps to reach on the top
        if(n <= 3){
            return n;
        }

        int a = 3,b =2;
        for(int i =0;i < n-3;i++){
            a = a + b;
            b = a - b;
        }
        return a;
    }
}
